<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- WhatsApp Message Form View -->
    <record id="whatsapp_message_view_form" model="ir.ui.view">
        <field name="name">whatsapp.message.form</field>
        <field name="model">whatsapp.message</field>
        <field name="arch" type="xml">
            <form string="WhatsApp Message" create="false">
                <header>
                    <button name="action_reply" 
                            string="Reply" 
                            type="object" 
                            class="btn-primary"
                            icon="fa-reply"
                            invisible="direction != 'incoming'"/>
                    <button name="action_open_partner" 
                            string="Open Contact" 
                            type="object"
                            icon="fa-user"
                            invisible="not partner_id"/>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="account_id"/>
                            <field name="direction" widget="badge"/>
                            <field name="phone_number"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="message_type"/>
                            <field name="whatsapp_message_id"/>
                            <field name="timestamp"/>
                        </group>
                    </group>
                    <group string="Message Content">
                        <field name="content" nolabel="1"/>
                    </group>
                    <group string="Media" invisible="not media_url">
                        <field name="media_url"/>
                        <field name="media_mime_type"/>
                    </group>
                    <group string="Error" invisible="not error_message">
                        <field name="error_message" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- WhatsApp Message Tree View -->
    <record id="whatsapp_message_view_tree" model="ir.ui.view">
        <field name="name">whatsapp.message.tree</field>
        <field name="model">whatsapp.message</field>
        <field name="arch" type="xml">
            <list string="WhatsApp Messages" default_order="timestamp desc">
                <field name="timestamp"/>
                <field name="direction" widget="badge"
                       decoration-info="direction == 'incoming'"
                       decoration-success="direction == 'outgoing'"/>
                <field name="phone_number"/>
                <field name="partner_id" optional="show"/>
                <field name="message_type"/>
                <field name="content" class="text-truncate" widget="text"/>
                <field name="status" widget="badge"
                       decoration-success="status == 'delivered' or status == 'read'"
                       decoration-warning="status == 'sent'"
                       decoration-danger="status == 'failed'"
                       decoration-muted="status == 'pending'"/>
                <field name="account_id" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- WhatsApp Message Search View -->
    <record id="whatsapp_message_view_search" model="ir.ui.view">
        <field name="name">whatsapp.message.search</field>
        <field name="model">whatsapp.message</field>
        <field name="arch" type="xml">
            <search string="Search Messages">
                <field name="phone_number"/>
                <field name="content"/>
                <field name="partner_id"/>
                <separator/>
                <filter name="incoming" string="Incoming" 
                        domain="[('direction', '=', 'incoming')]"/>
                <filter name="outgoing" string="Outgoing" 
                        domain="[('direction', '=', 'outgoing')]"/>
                <separator/>
                <filter name="today" string="Today" 
                        domain="[('timestamp', '&gt;=', (context_today()).strftime('%Y-%m-%d'))]"/>
                <filter name="this_week" string="This Week" 
                        domain="[('timestamp', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter name="failed" string="Failed" 
                        domain="[('status', '=', 'failed')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_direction" string="Direction" 
                            context="{'group_by': 'direction'}"/>
                    <filter name="group_by_phone" string="Phone Number" 
                            context="{'group_by': 'phone_number'}"/>
                    <filter name="group_by_status" string="Status" 
                            context="{'group_by': 'status'}"/>
                    <filter name="group_by_date" string="Date" 
                            context="{'group_by': 'timestamp:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- WhatsApp Message Action -->
    <record id="whatsapp_message_action" model="ir.actions.act_window">
        <field name="name">Messages</field>
        <field name="res_model">whatsapp.message</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No WhatsApp messages yet
            </p>
            <p>
                Messages will appear here when you send or receive WhatsApp messages.
            </p>
        </field>
    </record>
</odoo>
