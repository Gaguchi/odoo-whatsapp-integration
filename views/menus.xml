<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main WhatsApp Menu -->
    <menuitem id="whatsapp_menu_root"
              name="WhatsApp"
              web_icon="whatsapp_integration,static/description/icon.png"
              sequence="50"/>

    <!-- Chat (Primary) -->
    <menuitem id="whatsapp_menu_chat"
              name="Chat"
              parent="whatsapp_menu_root"
              action="whatsapp_chat_action"
              sequence="1"/>

    <!-- Conversations List -->
    <menuitem id="whatsapp_menu_conversations"
              name="Conversations"
              parent="whatsapp_menu_root"
              action="whatsapp_conversation_action"
              sequence="5"/>

    <!-- Messages (All Messages List) -->
    <menuitem id="whatsapp_menu_messages"
              name="All Messages"
              parent="whatsapp_menu_root"
              action="whatsapp_message_action"
              sequence="10"/>

    <!-- Configuration Parent Menu -->
    <menuitem id="whatsapp_menu_configuration"
              name="Configuration"
              parent="whatsapp_menu_root"
              sequence="90"/>

    <!-- Accounts Submenu -->
    <menuitem id="whatsapp_menu_accounts"
              name="Accounts"
              parent="whatsapp_menu_configuration"
              action="whatsapp_account_action"
              sequence="10"/>

    <!-- Templates Submenu -->
    <menuitem id="whatsapp_menu_templates"
              name="Message Templates"
              parent="whatsapp_menu_configuration"
              action="whatsapp_template_action"
              sequence="20"/>
</odoo>
