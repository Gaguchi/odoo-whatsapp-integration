<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Conversation Form View -->
    <record id="whatsapp_conversation_view_form" model="ir.ui.view">
        <field name="name">whatsapp.conversation.form</field>
        <field name="model">whatsapp.conversation</field>
        <field name="arch" type="xml">
            <form string="WhatsApp Conversation">
                <header>
                    <button name="action_open_chat" 
                            string="Open Chat" 
                            type="object" 
                            class="btn-primary"
                            icon="fa-comments"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="account_id"/>
                            <field name="phone_number"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="last_message_date"/>
                            <field name="unread_count"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Messages" name="messages">
                            <field name="message_ids">
                                <list default_order="timestamp desc">
                                    <field name="timestamp"/>
                                    <field name="direction" widget="badge"/>
                                    <field name="content"/>
                                    <field name="status" widget="badge"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Conversation Tree View -->
    <record id="whatsapp_conversation_view_tree" model="ir.ui.view">
        <field name="name">whatsapp.conversation.tree</field>
        <field name="model">whatsapp.conversation</field>
        <field name="arch" type="xml">
            <list string="WhatsApp Conversations" default_order="last_message_date desc">
                <field name="display_name"/>
                <field name="phone_number"/>
                <field name="partner_id" optional="show"/>
                <field name="last_message_date"/>
                <field name="last_message_preview"/>
                <field name="unread_count"/>
                <field name="account_id" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Conversation Search View -->
    <record id="whatsapp_conversation_view_search" model="ir.ui.view">
        <field name="name">whatsapp.conversation.search</field>
        <field name="model">whatsapp.conversation</field>
        <field name="arch" type="xml">
            <search string="Search Conversations">
                <field name="phone_number"/>
                <field name="partner_id"/>
                <filter name="unread" string="Unread" 
                        domain="[('unread_count', '>', 0)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_account" string="Account" 
                            context="{'group_by': 'account_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Chat Client Action -->
    <record id="whatsapp_chat_action" model="ir.actions.client">
        <field name="name">WhatsApp Chat</field>
        <field name="tag">whatsapp_chat</field>
    </record>

    <!-- Conversations List Action -->
    <record id="whatsapp_conversation_action" model="ir.actions.act_window">
        <field name="name">Conversations</field>
        <field name="res_model">whatsapp.conversation</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No conversations yet
            </p>
            <p>
                Conversations will appear here when you send or receive WhatsApp messages.
            </p>
        </field>
    </record>
</odoo>
